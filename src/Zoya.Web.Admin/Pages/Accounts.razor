@page "/accounts"

<PageTitle>Accounts</PageTitle>

<h1>Your accounts</h1>
@if (_accounts == null)
{
  <p>
    <em>Loading...</em>
  </p>
}
else
{
  <table class="table">
    <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Owner</th>
      <th>Balance</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var account in _accounts)
    {
      <tr>
        <td>@account.CreatedOn</td>
        <td>@account.DisplayName</td>
        <td>Hardcoded owner</td>
        <td>@account.Balance @account.CurrencySymbol</td>
      </tr>
    }
    </tbody>
  </table>
}